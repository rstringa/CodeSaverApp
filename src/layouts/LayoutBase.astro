---
import '@styles/highlight-js.css'
import '@styles/highlight-theme.css'
import '@styles/global.css'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { supabase } from '@lib/supabaseClient'
const { data: userSession } = await supabase.auth.getSession()
const userSessionId = userSession?.session?.user.id
---

<!doctype html>
<html lang="es-ES">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>CodeSaverApp - Tus snippets de c√≥digo siempre a mano.</title>
	</head>
	<body
		class=`theme-atom-one-dark is-loading h-screen w-full bg-slate-900 text-slate-100
  ${userSessionId ? 'logged-in' : 'logged-out'}
  `
	>
		<Header />
		<slot />
		<Footer />
