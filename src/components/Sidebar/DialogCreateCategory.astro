<dialog
	id="new-category-modal"
	class="open:rounded-0 w-[600px] max-w-[90%] bg-transparent p-0 shadow-lg backdrop:bg-slate-900/50 backdrop:backdrop-blur-[2px] open:m-auto open:flex open:items-center open:justify-center"
>
	<div
		class="_inner relative w-full flex-col overflow-hidden rounded border border-slate-900 bg-[#1c283e] p-6 px-8 pb-8"
	>
		<div class="mb-3 flex flex-col gap-2">
			<h2 class="mb-3 text-2xl text-slate-100">Crear nueva categoría</h2>
			{/* <label for="titulo" class="font-regular text-slate-300 text-md">Título: </label> */}
			<input
				class="_name bg-trasnparent mb-4 rounded border border-slate-600 p-3 text-white focus:ring-2 focus:ring-green-800 focus:outline-none"
				type="text"
				id="new-category-name"
				placeholder="Nombre de la categoría"
				required
			/>
		</div>

		<div class="_message -mt-4 mb-3 flex items-center justify-between text-sm text-red-400"></div>
		<div class="flex items-center justify-between gap-3">
			<button
				class="_create _btn-featured w-full bg-green-600/50! p-3! text-green-100!"
				id="create"
				type="button">Crear categoría</button
			>
		</div>
	</div>
</dialog>
